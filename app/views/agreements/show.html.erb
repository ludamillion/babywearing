<p id="notice"><%= notice %></p>

<% if @signed_agreement %>
  <p>Agreement signed by: <%= @signed_agreement.signature %> at: <%= @signed_agreement.created_at %></p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @agreement.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @agreement.content %>
</p>

<%= link_to 'Sign', signed_agreement_path(@agreement), class: 'btn btn-primary btn-sm' %> |
<% if policy(:agreement).edit? %>
  <%= link_to 'Edit', edit_agreement_path(@agreement), class: 'btn btn-primary btn-sm' %> |
<% end %>
<%= link_to 'Back', agreements_path, class: 'btn btn-primary btn-sm' %>
